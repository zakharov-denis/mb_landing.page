{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "app/**",
      "next.config.js",
      "tsconfig.json",
      "package.json",
      "package-lock.json",
      "*.py",
      "*.md",
      "public/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/page.html"
      }
    ]
  }
}
